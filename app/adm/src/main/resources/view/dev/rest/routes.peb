{% extends "bundle://adm/view/layout/master.peb" %}

{% block content %}

<div class="container-fluid">
    <div class="page-header">
        <h1>REST Routes</h1>
    </div>

    {% if routes is empty %}
        <p class="bg-info"><i class="fa fa-info-circle"></i> Lack of routes.</p>
    {% else %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>URI</th>
                <th>Parameters</th>
                <th>Methods</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for route in routes %}
                <tr>
                    <th scope="row">{{ loop.index + 1 }}</th>
                    <td>{{ route.path }}</td>
                    <td>{{ route.parameters | join(',') }}</td>
                    <td>{{ route.methods | join(',') }}</td>
                    <td>
                        {% if route.name is not empty %}
                            {{ route.name }}
                        {% else %}
                            &mdash;
                        {% endif %}
                    </td>
                    <td>{{ route.action }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>

{% endblock %}